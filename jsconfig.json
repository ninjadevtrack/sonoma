{
    "compilerOptions": {
      "baseUrl": "./src",
      "paths": {
        "components/*": ["./components/*"],
        "assets/*": ["./assets/*"],
        "containers/*": ["./containers/*"],
        "pages/*": ["./pages/*"],
        "redux/*": ["./redux/*"],
        "utils/*": ["./utils/*"],
        "services/*": ["./services/*"],
        "graphql/*": ["./qraphql/*"],
        "globalStyles/*": ["./globalStyles/*"]
      },
      "target": "ES6",
      "jsx": "preserve",
      "allowSyntheticDefaultImports": true
    },
    "exclude": ["build", "node_modules"]
}